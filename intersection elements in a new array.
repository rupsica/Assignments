package com.array;
import java.util.Arrays;

public class Intersectionelements {
	
	
	    public static void main(String[] args) {
	        int[] arr1 = {1, 2, 3, 4, 5};
	        int[] arr2 = {3, 4, 5, 6, 7};

	        // Temporary array to store intersection
	        int[] temp = new int[Math.min(arr1.length, arr2.length)];
	        int index = 0;

	        for (int i = 0; i < arr1.length; i++) {
	            for (int j = 0; j < arr2.length; j++) {
	                if (arr1[i] == arr2[j]) {
	                    // Avoid duplicates
	                    boolean alreadyExists = false;
	                    for (int k = 0; k < index; k++) {
	                        if (temp[k] == arr1[i]) {
	                            alreadyExists = true;
	                            break;
	                        }
	                    }
	                    if (!alreadyExists) {
	                        temp[index++] = arr1[i];
	                    }
	                }
	            }
	        }

	        // Create final array with correct size
	        int[] intersection = Arrays.copyOf(temp, index);

	        // Print result
	        System.out.println("Intersection elements: " + Arrays.toString(intersection));
	    }
	}


